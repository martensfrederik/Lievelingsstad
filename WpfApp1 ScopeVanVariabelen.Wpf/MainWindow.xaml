        <ListBox x:Name="lstVoorkeur" HorizontalAlignment="Left" Height="77" Margin="178,159,0,0" VerticalAlignment="Top" Width="267" SelectionChanged="lstVoorkeur_SelectionChanged"/>
        <TextBox x:Name="tbkFeedback" HorizontalAlignment="Left" Height="77" Margin="76,264,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="369"/>

    </Grid>
</Window>
